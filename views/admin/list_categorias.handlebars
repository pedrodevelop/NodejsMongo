<h2 class="display-4">Lista de categorias:</h2>
<hr class="my-4">

{{#each categorias}}
    <div class="card">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small><br>
            <a href="/admin/categorias/update/{{_id}}"><button class="btn btn-success mt-2">Editar categoria</button></a>
            <form action="/admin/categorias/delete" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
            </form>
        </div>
    </div>
{{else}}
    <h4>Nenhuma categoria registrada.</h4>
{{/each}}

<a href="/admin/categorias/create"><button class="btn btn-primary mt-4">Nova categoria</button></a>

