<h2 class="display-4">Lista de postagens:</h2>
<hr class="my-4">
{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Categoria: {{categoria.nome}}</small><br>
            <small>Data: {{data}}</small>
        </div>
    </div>
{{else}}
    <h4>Nenhuma postagem registrada.</h4>
{{/each}}
<a href="/admin/postagens/create"><button class="btn btn-primary mt-4">Nova postagem</button></a>

