{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
    
{{/each}}
<h1 class="display-4">Editar categoria:</h1>
<hr class="my-4">
<div class="card">
    <div class="card-body">
    <form method="POST" action="/admin/categorias/update">
    <input type="hidden" name="id" value="{{categoria._id}}">
        <div class="form-group">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control" name="nome" id="nome" placeholder="Nome da categoria" value="{{categoria.nome}}">
        </div>
        <div class="form-group">
            <label for="slug">Senha:</label>
            <input type="text" class="form-control" name="slug" id="slug" placeholder="Slug da categoria" value="{{categoria.slug}}">
            <small class="form-text text-muted">Não é permitido letras maiúsculas e/ou caracteres especiais (*, @, #), substitua os espaços por " - ".</small>
        </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    </form>
</div>